# Nginx configuration for HiAnime API (PHP)
#
# Copy this file to /etc/nginx/sites-available/hianime-api
# and create a symlink: ln -s /etc/nginx/sites-available/hianime-api /etc/nginx/sites-enabled/

server {
    listen 80;
    listen [::]:80;
    
    server_name localhost;  # Change to your domain
    root /var/www/hianime-API;  # Change to your installation path
    index index.php;

    # Logging
    access_log /var/log/nginx/hianime-api-access.log;
    error_log /var/log/nginx/hianime-api-error.log;

    # Character encoding
    charset utf-8;

    # Security headers
    add_header X-Frame-Options "SAMEORIGIN" always;
    add_header X-Content-Type-Options "nosniff" always;
    add_header X-XSS-Protection "1; mode=block" always;

    # CORS (will be handled by PHP middleware, but can add here too)
    # add_header Access-Control-Allow-Origin "*" always;

    # Main location - try files first, then pass to PHP
    location / {
        try_files $uri $uri/ /index.php?$query_string;
    }

    # PHP processing
    location ~ \.php$ {
        try_files $uri =404;
        fastcgi_pass unix:/var/run/php/php8.1-fpm.sock;  # Adjust PHP version
        fastcgi_index index.php;
        fastcgi_param SCRIPT_FILENAME $document_root$fastcgi_script_name;
        include fastcgi_params;
        
        # Increase timeout for streaming operations
        fastcgi_read_timeout 300;
    }

    # Deny access to hidden files
    location ~ /\. {
        deny all;
        access_log off;
        log_not_found off;
    }

    # Deny access to composer files
    location ~ /composer\.(json|lock)$ {
        deny all;
        access_log off;
        log_not_found off;
    }

    # Deny access to .env files
    location ~ /\.env {
        deny all;
        access_log off;
        log_not_found off;
    }

    # Cache static assets
    location ~* \.(jpg|jpeg|png|gif|ico|css|js|svg|woff|woff2|ttf|eot)$ {
        expires 1y;
        add_header Cache-Control "public, immutable";
    }

    # Gzip compression
    gzip on;
    gzip_vary on;
    gzip_min_length 1024;
    gzip_types text/plain text/css text/xml text/javascript application/json application/javascript application/xml+rss;
}
